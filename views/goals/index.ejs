<%- include('../partials/html-head') %>
<%- include('../partials/nav') %>
<main>
  <h1><%= title %></h1>
  <table>
    <tr>
      <th>Category</th>
      <th>Title</th>
      <th>Deadline</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
    <% goals.forEach(goal => { %>
     <tr>
       <td><%= goal.category %></td>
       <td><%= goal.title %></td>
       <td><%= goal.deadline.toISOString().slice(5, 10)%>-<%= goal.deadline.toISOString().slice(0, 4)%></td>
       <td>
        <a href="/goals/<%= goal._id %>">
          <button>Details</button>
        </a>
        </td>
        <td>
          <a href="/goals/<%= goal._id %>/checkIn/new">
            <button>Check-In</button>
          </a>
        </td>
        <td>
          <form action="/goals/<%= goal._id %>/?_method=DELETE" method="POST">
            <button>X</button>
          </form>
        </td>
     </tr>
    <% }) %>
  </table>
  <a href="/goals/new">
    <button>Create new goal</button>
  </a>
</main>

<%- include('../partials/footer') %>
